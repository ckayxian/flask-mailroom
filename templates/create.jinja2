{% extends 'base.jinja2' %}

{% block subtitle %}Create{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="donor-name">Donor Name:</label><input id="donor-name" type="text" name="name"><br><br>
    <label for="donation">Donation Value:</label><input id="donation" type="number" name="value"><br><br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}